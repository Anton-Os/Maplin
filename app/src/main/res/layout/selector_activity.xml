<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <HorizontalScrollView
            android:id="@+id/map_options_hscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">
            <!-- Contains all the map editing options -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:orientation="vertical">
                <!-- Contains selections for pinpoint images -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <!-- Probably settle for 6 card views representing each icon -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <ListView
            android:id="@+id/map_list"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/map_options_hscroll"
            android:background="@color/colorPrimary">

            <!-- Insert Option Items to Perform Operations -->

        </ListView>

        <Button
            android:id="@+id/create_map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorCard"
            android:textColor="@color/colorButtonText"
            android:text="Create Map" />

    </LinearLayout>

    <!-- Possible alternative to ListView -->
    <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcycl_map_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A9EAF"
        android:cacheColorHint="#FFFFFF">

    </androidx.recyclerview.widget.RecyclerView> -->
</androidx.coordinatorlayout.widget.CoordinatorLayout>