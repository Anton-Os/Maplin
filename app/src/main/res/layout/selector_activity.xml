<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SelectorActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- This is for customizing the map editor theme -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <!-- This is for customizing icons -->
        <HorizontalScrollView
            android:id="@+id/map_options_hscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">
            <!-- Contains all the map editing options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TODO: Can also be made into a List View to save space! -->
                <!-- Contains selections for pinpoint images -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/map_pinpoint_image1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@drawable/baseline_pin_drop_black_18dp"/>
                            <TextView
                                android:id="@+id/map_pinpoint_text1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:fontFamily="@font/amita_regular"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:text="@string/pinpoint_text1" /> <!-- Name must be dynamic -->

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/map_pinpoint_image2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@drawable/baseline_person_pin_circle_black_18dp"/>
                            <TextView
                                android:id="@+id/map_pinpoint_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:fontFamily="@font/amita_regular"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:text="@string/pinpoint_text2" /> <!-- Name must be dynamic -->

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/map_pinpoint_image3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@drawable/baseline_terrain_black_18dp"/>
                            <TextView
                                android:id="@+id/map_pinpoint_text3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:fontFamily="@font/amita_regular"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:text="@string/pinpoint_text3" /> <!-- Name must be dynamic -->

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/map_pinpoint_image4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@drawable/baseline_grass_black_18dp"/>
                            <TextView
                                android:id="@+id/map_pinpoint_text4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:fontFamily="@font/amita_regular"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:text="@string/pinpoint_text4" /> <!-- Name must be dynamic -->

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/map_pinpoint_image5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@drawable/baseline_location_city_black_18dp"/>
                            <TextView
                                android:id="@+id/map_pinpoint_text5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:fontFamily="@font/amita_regular"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:text="@string/pinpoint_text5" /> <!-- Name must be dynamic -->

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_pinpoint_selection6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/colorCard"
                        app:cardCornerRadius="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/map_pinpoint_image6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:src="@drawable/baseline_anchor_black_18dp"/>
                            <TextView
                                android:id="@+id/map_pinpoint_text6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-5dp"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                android:fontFamily="@font/amita_regular"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:text="@string/pinpoint_text6" /> <!-- Name must be dynamic -->

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <ListView
            android:id="@+id/map_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="45dp"
            app:layout_anchor="@id/map_options_hscroll">

            <!-- Insert Option Items to Perform Operations -->

        </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/create_map_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="bottom|center"
        android:background="@color/colorCard"
        android:text="Create Map"
        android:textColor="@color/colorButtonText" />

    <!-- Possible alternative to ListView -->
    <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcycl_map_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A9EAF"
        android:cacheColorHint="#FFFFFF">

    </androidx.recyclerview.widget.RecyclerView> -->
</androidx.coordinatorlayout.widget.CoordinatorLayout>